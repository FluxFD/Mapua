<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardReviewerActivity"
    android:background="@color/gray">

    <TextView
        android:id="@+id/activityTitleTextview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:text="Title Of Activity"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityTitleTextview"
        app:layout_constraintVertical_bias="0.0">


        <Button
            android:id="@+id/flashCard"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Flash Card"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="225dp"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/multipleChoice"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Multiple Choice"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="304dp"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/identification"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Identification"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="408dp"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/enumeration"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Enumeration"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="408dp"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/practiceQuestion"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Practice Question"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="489dp"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/videoActivity"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Video Activity"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="489dp"
            android:background="@color/blue"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>